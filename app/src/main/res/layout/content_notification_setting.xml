<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.umd.cs.tabby.NotificationSetting"
    tools:showIn="@layout/activity_notification_setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="150dp"
                android:text="Email"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:text="Text"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="Date"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_live_help_24dp"
                android:layout_weight=".1"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Register:   "
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:layout_weight=".2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/registerEmail"
                android:layout_weight=".3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/registerText"
                android:layout_weight=".3"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_invitation_24dp"
                android:id="@+id/registerCalendar"
                android:layout_weight=".1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_live_help_24dp"
                android:layout_weight=".1"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Polling:      "
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:layout_weight=".2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/pollingEmail"
                android:layout_weight=".3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/pollingText"
                android:layout_weight=".3"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_invitation_24dp"
                android:id="@+id/pollingCalendar"
                android:layout_weight=".1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_live_help_24dp"
                android:layout_weight=".1"
                android:onClick="displayCandidateSettingInfo"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Candidate:"
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:layout_weight=".2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/candidateEmail"
                android:layout_weight=".3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/candidateText"
                android:layout_weight=".3"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_invitation_24dp"
                android:id="@+id/candidateCalendar"
                android:layout_weight=".1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_live_help_24dp"
                android:layout_weight=".1"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Ballot:        "
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:layout_weight=".2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ballotEmail"
                android:layout_weight=".3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ballotText"
                android:layout_weight=".3"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_invitation_24dp"
                android:id="@+id/ballotCalendar"
                android:layout_weight=".1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_live_help_24dp"
                android:layout_weight=".1"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="News:        "
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:layout_weight=".2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/newsEmail"
                android:layout_weight=".3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/newsText"
                android:layout_weight=".3"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_invitation_24dp"
                android:id="@+id/newsCalendar"
                android:layout_weight=".1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_live_help_24dp"
                android:layout_weight=".1"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Deadlines:"
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:layout_weight=".2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/deadlinesEmail"
                android:layout_weight=".3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/deadlinesText"
                android:layout_weight=".3"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_invitation_24dp"
                android:id="@+id/deadlinesCalendar"
                android:layout_weight=".1"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_live_help_24dp"
                android:layout_weight=".1"
                android:onClick="displayEventsSettingInfo"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Events:      "
                android:textSize="20dp"
                android:paddingTop="8dp"
                android:layout_weight=".2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/eventsEmail"
                android:layout_weight=".3"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/eventsText"
                android:layout_weight=".3"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_invitation_24dp"
                android:id="@+id/eventsCalendar"
                android:layout_weight=".1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/descriptionTitle"
            android:textSize="20dp"
            android:text="About Register Setting:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/descriptionContent"
            android:textSize="15dp"
            android:text="Notify you with requirements when registering to vote"/>

    </LinearLayout>

</RelativeLayout>
