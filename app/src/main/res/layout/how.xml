<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Election"
        android:textStyle="bold"
        android:textSize="@dimen/tab_main_title"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOW"
        android:textStyle="bold"
        android:textSize="@dimen/tab_sub_title"
        android:gravity="center"
        android:layout_marginBottom="@dimen/list_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_information"
        android:id="@+id/howContent"/>

</LinearLayout>
